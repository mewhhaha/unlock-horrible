{
  "name": "worker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "rimraf dist/assets && wrangler deploy",
    "start": "wrangler dev",
    "test": "vitest",
    "cf-typegen": "wrangler types",
    "typecheck": "tsc -p tsconfig.json",
    "routes": "fs-routes ./app",
    "build": "run-s build:*",
    "bundle": "rolldown -c ./rolldown.config.js --minify",
    "build:routes": "pnpm routes",
    "build:styles": "tailwindcss -i .app/tailwind.css -o ./public/styles.css --optimize",
    "build:assets": "fingerprint -i ./public -o ./dist/assets -m ./app/import-map.json",
    "dev": "pnpm dev:wrangler",
    "dev:wrangler": "wrangler dev --live-reload",
    "dev:styles": "tailwindcss -i ./app/tailwind.css -o ./app/assets/styles.css --watch"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241224.0",
    "@mewhhaha/eslint-plugin-simple-tailwind": "^0.0.12",
    "@mewhhaha/htmx-router": "workspace:^",
    "@packages/passkey": "workspace:^",
    "@tailwindcss/cli": "4.0.0-beta.8",
    "@types/cookie-signature": "^1.1.2",
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-plugin-oxlint": "^0.15.7",
    "npm-run-all": "^4.1.5",
    "oxlint": "^0.15.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "4.0.0-beta.8",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.21.0",
    "vitest": "^3.0.2",
    "wrangler": "^3.103.2"
  },
  "dependencies": {
    "@passwordless-id/webauthn": "^2.1.2",
    "cookie": "^1.0.2",
    "rolldown": "1.0.0-beta.1"
  }
}
